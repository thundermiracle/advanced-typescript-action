{
  "name": "advanced-typescript-action",
  "version": "0.1.0",
  "author": "thundermiracle",
  "license": "MIT",
  "packageManager": "pnpm@8.15.9",
  "main": "lib/main.js",
  "scripts": {
    "format": "prettier --write '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "pnpm lint && vitest run",
    "build": "tsup",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "pnpm build && pnpm format && pnpm test && pnpm package",
    "cs:version": "changeset version",
    "cs:tag": "changeset tag"
  },
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@swc/core": "^1.15.8",
    "@types/node": "^18.19.130",
    "@vercel/ncc": "^0.38.4",
    "@vitest/coverage-v8": "^4.0.15",
    "@web-configs/eslint-plugin": "^0.5.2",
    "@web-configs/prettier": "^0.1.2",
    "@web-configs/typescript": "^0.2.2",
    "eslint": "^9.39.1",
    "prettier": "^3.7.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "prettier": "@web-configs/prettier",
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "outDir": "lib",
    "splitting": true,
    "clean": true
  }
}
